{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "allowJs": true,
    "typeRoots": [
      "typings"
    ],
    "lib": [
      "dom",
      "es6"
    ]
  },
  "include": [
    "src/**/*.ts",
    "utils/**/*.ts",
  ],
  "exclude": [
    "typings",
    "node_modules",
    "**/*.spec.ts",
    "**/*.d.ts"
  ]
}